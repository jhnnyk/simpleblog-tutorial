<h2><%= @post.title %></h2>
<p><%= markdown(@post.body) %></p>
<hr>
<% if logged_in? %>
  <%= link_to "Edit", edit_post_path(@post), class: 'btn btn-primary' %>
  <%= link_to "Delete", post_path(@post), 
              class: 'btn btn-danger', 
              data: { confirm: 'Are you sure?' },
              method: :delete %>
<% end %>

    