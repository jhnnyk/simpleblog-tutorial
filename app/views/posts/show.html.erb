<h6>
  <small class="text-muted">
    <%= @post.date.strftime("%B %-d, %Y") %>
  </small>
</h6>

<h2><%= @post.title %></h2>
<p><%= markdown(@post.body) %></p>
<hr>
<% if logged_in? %>
  <%= link_to "Edit", edit_post_path(@post), class: 'btn btn-primary' %>
  <%= link_to "Delete", post_path(@post), 
              class: 'btn btn-danger', 
              data: { confirm: 'Are you sure?' },
              method: :delete %>
<% end %>

    